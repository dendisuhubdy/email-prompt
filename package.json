{
  "name": "email-prompt",
  "version": "0.3.2",
  "repository": "zeit/email-prompt",
  "license": "MIT",
  "files": [
    "build.js"
  ],
  "main": "build.js",
  "description": "CLI email prompt with autocompletion and built-in validation",
  "scripts": {
    "build": "buble -y dangerousForOf index.js > build.js",
    "prepublish": "npm run build",
    "test": "xo"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "no-use-before-define": 0,
      "func-names": 0
    }
  },
  "dependencies": {
    "ansi-escapes": "3.1.0",
    "chalk": "2.4.1"
  },
  "devDependencies": {
    "buble": "0.19.3",
    "xo": "0.21.1"
  }
}
